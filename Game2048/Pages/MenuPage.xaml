<Window x:Class="Game2048.Pages.MenuPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game2048.Pages"
        mc:Ignorable="d"
        Title="2048" Height="520" Width="410" WindowStartupLocation="CenterScreen" Style="{StaticResource StyleWindow}">
    <Grid Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Button x:Name="Start" Content="Играть" Grid.Row="0" Style="{StaticResource StyleButton}" Margin="40,20,40,5" Click="Start_Click" />
        <Button x:Name="Statistic" Content="Статистика" Grid.Row="1" Style="{StaticResource StyleButton}" Margin="40,5,40,5"/>
        <Button x:Name="Exit" Content="Выход" Grid.Row="2" Style="{StaticResource StyleButton}" Margin="40,5,40,5" Click="Exit_Click"/>
    </Grid>
</Window>
